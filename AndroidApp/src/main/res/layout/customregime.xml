            tools:ignore="LabelFor"
            tools:targetApi="o" />

        <EditText
            android:id="@+id/EBlockEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="90dp"
            android:background="@color/fbutton_color_silver"
            android:importantForAutofill="no"
            android:inputType="time"
            android:text=""
            app:layout_constraintLeft_toRightOf="@id/EBlockStart"
            app:layout_constraintRight_toLeftOf="@id/NoEBlock"
            app:layout_constraintTop_toTopOf="@id/LunchEnd"
            tools:ignore="LabelFor"
            tools:targetApi="o" />

        <CheckBox
            android:id="@+id/NoEBlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="No E block"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/NoLunch" />



        <TextView
            android:id="@+id/FBlockHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="50dp"
            android:text="@string/f_block"
            app:layout_constraintRight_toLeftOf="@id/FBlockName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/EBlockHeader" />

        <EditText
            android:id="@+id/FBlockStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="90dp"
            android:background="@color/fbutton_color_silver"
            android:importantForAutofill="no"
            android:inputType="time"
            android:text=""
            app:layout_constraintLeft_toRightOf="@id/FBlockHeader"
            app:layout_constraintRight_toLeftOf="@id/FBlockEnd"
            app:layout_constraintTop_toTopOf="@id/EBlockStart"
            tools:ignore="LabelFor"
            tools:targetApi="o" />

        <EditText
            android:id="@+id/FBlockEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="90dp"
            android:background="@color/fbutton_color_silver"
            android:importantForAutofill="no"
            android:inputType="time"
            android:text=""
            app:layout_constraintLeft_toRightOf="@id/FBlockStart"
            app:layout_constraintRight_toLeftOf="@id/NoFBlock"
            app:layout_constraintTop_toTopOf="@id/EBlockEnd"
            tools:ignore="LabelFor"
            tools:targetApi="o" />

        <CheckBox
            android:id="@+id/NoFBlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="No F block"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/NoEBlock" />



        <TextView
            android:id="@+id/GBlockHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="50dp"
            android:text="@string/g_block"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/FBlockHeader" />

        <EditText
            android:id="@+id/GBlockStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="90dp"
            android:background="@color/fbutton_color_silver"
            android:time="no"
            android:inputType="textAutoCorrect"
            android:text=""
            app:layout_constraintLeft_toRightOf="@id/GBlockHeader"
            app:layout_constraintRight_toLeftOf="@id/GBlockEnd"
            app:layout_constraintTop_toTopOf="@id/FBlockStart"
            tools:ignore="LabelFor"
            tools:targetApi="o" />

        <EditText
            android:id="@+id/GBlockEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="90dp"
            android:background="@color/fbutton_color_silver"
            android:time="no"
            android:inputType="textAutoCorrect"
            android:text=""
            app:layout_constraintLeft_toRightOf="@id/GBlockStart"
            app:layout_constraintRight_toLeftOf="@id/NoGBlock"
            app:layout_constraintTop_toTopOf="@id/FBlockEnd"
            tools:ignore="LabelFor"
            tools:targetApi="o" />

        <CheckBox
            android:id="@+id/NoGBlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="No G block"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/NoFBlock" />



        <TextView
            android:id="@+id/HBlockHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:text="@string/h_block"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/GBlockHeader" />

        <EditText
            android:id="@+id/HBlockStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="20dp"
            android:background="@color/fbutton_color_silver"
            android:importantForAutofill="no"
            android:inputType="time"
