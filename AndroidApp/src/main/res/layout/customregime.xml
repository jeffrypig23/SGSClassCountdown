            android:layout_marginEnd="90dp"
            android:layout_marginBottom="20dp"
            android:background="@color/fbutton_color_silver"
            android:importantForAutofill="no"
            android:inputType="time"
            android:text=""
            app:layout_constraintLeft_toRightOf="@id/HBlockStart"
            app:layout_constraintRight_toLeftOf="@id/NoHBlock"
            app:layout_constraintTop_toTopOf="@id/GBlockEnd"
            tools:ignore="LabelFor"
            tools:targetApi="o" />

        <CheckBox
            android:id="@+id/NoHBlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:text="No H block"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/NoGBlock" />

