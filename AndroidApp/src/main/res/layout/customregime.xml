            tools:targetApi="o" />

        <EditText
            android:id="@+id/LunchEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="90dp"
            android:background="@color/fbutton_color_silver"
            android:importantForAutofill="no"
            android:inputType="time"
            android:text=""
            app:layout_constraintLeft_toRightOf="@id/LunchStart"
            app:layout_constraintRight_toLeftOf="@id/NoLunch"
            app:layout_constraintTop_toTopOf="@id/DBlockEnd"
            tools:ignore="LabelFor"
            tools:targetApi="o" />

        <CheckBox
            android:id="@+id/NoLunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="No Lunch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/NoDBlock" />



        <TextView
